<h1>Create a New Figure</h1>

<form method="POST" action="/figures">
    <label>Name:</label>
    <input type="text" name="figure[name]" id="figure_name">
    <br>

    <label>Title(s):</label>
    <h2>Choose from an Existing Title</h2>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
        <%= title.name %>
        <br>
    <% end %>    
    <h2>and/or Create a New Title:</h2>
    <label>Title:</label><input type="text" name="title[name]" id="new_title">

    <br><br>

    <label>Landmark(s):</label><br>
    <h2>Choose from an Existing Landmark</h2>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
        <%= landmark.name %>
        <br>
    <% end %><br>
    <h2>and/or Create a New Landmark:</h2>
    <label>Landmark:</label><input type="text" name="landmark[name]" id="new_landmark">
    <br><br>

    <input type="submit" value="Create New Figure">

</form>

